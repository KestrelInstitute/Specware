#!/bin/sh

act='launch Specware in Allegro CL, using Allegro xeli interface to XEmacs'

OLD_PATH=$PATH
PATH=/bin:/usr/bin:/etc:/sbin:/usr/sbin:/usr/local/bin

# Use the directory of this file as the default value of SPECWARE4
# Note: $0 may refer to Specware or SpecwareShell script invoking this...

INVOKED_HERE=`dirname $0`
cd $INVOKED_HERE
HERE=`pwd`

. $HERE/Find_Specware4
. $HERE/Find_ACL

LISP_HEAP_IMAGE="$SPECWARE4"/Specware4.dxl
echo  "LISP_HEAP_IMAGE = $LISP_HEAP_IMAGE"
export LISP_HEAP_IMAGE

. $HERE/Find_XEmacs

PATH=$OLD_PATH

$XEMACS -geometry 180x70+180+2 \
        -name  "Specware" \
        -title "Specware" \
        -l "$LISP_DIR"/xeli/fi-site-init \
        -l "$SPECWARE4"/Library/IO/Emacs/load \
        $* \
        -f run-specware4 &

