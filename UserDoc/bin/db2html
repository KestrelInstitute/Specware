#! /bin/sh

DB_STYLESHEET=`pwd`/../docbook/cygnus-both.dsl
HTML_STYLESHEET=`pwd`/../docbook/docbook.css
ADMON_GRAPHICS=`pwd`/../docbook/images/*.gif

output=db2html-dir
TMPDIR=DBTOHTML_OUTPUT_DIR$$

jadeoptions=

case $1 in
     -E) jadeoptions="$jadeoptions $1 $2"; shift; shift;;
     -E*) jadeoptions="$jadeoptions $1";  shift;;
esac

/bin/echo TMPDIR is $TMPDIR

if [ $# -gt 2 ]
then
  /bin/echo "Usage: `basename $0` [filename.sgml]" >&2
  exit 1
fi

if [ $# -eq 1 ]
then
  if [ ! -r $1 ]
  then
    /bin/echo Cannot read \"$1\".  Exiting. >&2
    exit 1
  fi
  if /bin/echo $1 | egrep -i '\.sgml$|\.sgm$' >/dev/null 2>&1
  then
    # now make sure that the output directory is always a subdirectory
    # of hte current directory
    /bin/echo
    input_file=`basename $1`
    output="`/bin/echo $input_file | sed 's,\.sgml$,,;s,\.sgm$,,'`"
    /bin/echo "input file was called $input_file -- output will be in $output"
    /bin/echo
  fi
fi

# we used to generate a single file, but with the modular DB_STYLESHEETs
# it's best to make a new directory with several html files in it
#/bin/cat $* | jade -d $DB_STYLESHEET -t sgml -V nochunks > $TMPFN

/bin/mkdir $TMPDIR
SAVE_PWD=`pwd`
if [ $1 = `basename $1` ]; then
  /bin/echo "working on ../$1"
  (cd $TMPDIR; jade $jadeoptions -t sgml -ihtml -d ${DB_STYLESHEET}\#html ../$1; cd $SAVE_PWD)
else
  /bin/echo "working on $1"
  (cd $TMPDIR; jade $jadeoptions -t sgml -ihtml -d ${DB_STYLESHEET}\#html $1; cd $SAVE_PWD)
fi

if [ $# -eq 1 ]
then
  if [ -d ${output}.junk ]
  then
    /bin/rm -rf ${output}.junk
  fi
  if [ -d ${output} ]
  then
    /bin/mv $output ${output}.junk
  fi
  /bin/echo "about to copy cascading stylesheet and admon graphics to temp dir"
  /bin/cp ${HTML_STYLESHEET} ${TMPDIR}/
  /bin/mkdir ${TMPDIR}/stylesheet-images
  /bin/cp ${ADMON_GRAPHICS} ${TMPDIR}/stylesheet-images
  /bin/echo "about to rename temporary directory to $output"
  /bin/mv ${TMPDIR} $output
else
  /bin/cat $TMPDIR/*
fi

/bin/rm -rf $TMPDIR

exit 0
