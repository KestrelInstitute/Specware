#!/bin/sh
# this is bin/mkreswords
self=mkreswords

arch=UNKNOWN
if [ -x /bin/uname ]; then
  arch=`/bin/uname`-`/bin/uname -p`
fi

case $arch in
     UNKNOWN) exec /bin/echo "$self: unknown architecture (no uname/arch program found)" >&2;;
     *inux-i*86) : ok;;
     *) exec /bin/echo "$self: found architecture $arch but requires Linux-i686 to run" >&2;;
esac

LHOME=`/bin/echo /bin/echo ~lambert | sh`
abc=$LHOME/bin/i686/abc-binary
abcmeta=$LHOME/abc/meta

if [ ! -r $abc ]; then
     exec /bin/echo "$self: abc-binary not found" >&2
fi
 
(/bin/echo RESWORDS; /bin/cat "$@"; /bin/echo FinitaLaStoria!) |
    $abc -w $abcmeta 2>&1 | /bin/grep -v '^Incorrectly built binary'
