#!/bin/sh
PATH=/bin:/usr/bin:/usr/local/bin
self=`basename $0`
usage="Usage: $self file ..."

case $# in
     1) : ok;;
     *) for F
        do "$0" "$F"
	done
	exit 0;;
esac

F="$1"

if [ ! -r "$F" ]
then exec echo "$self: cannot open $F" 2>&1
fi

if [ ! -w "$F" ]
then exec echo "$self: cannot write to $F" 2>&1
fi

echo epibrating "$F"

ed - "$F" <<!r0tAn1mReT
g/|         |/s/|         |/|            |/
g/v         v/s/v         v/v            v/
w
q
!r0tAn1mReT
